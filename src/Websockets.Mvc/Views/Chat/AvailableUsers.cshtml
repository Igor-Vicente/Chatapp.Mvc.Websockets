@using Websockets.Mvc.Extensions
@model IEnumerable<User>


<div>
    <vc:Conversations></vc:Conversations>
</div>
<div class="container py-5">
    <h1 class="text-center mb-5 text-primary">Available Users</h1>
    <div class="row g-4 mb-5">
        @foreach (var i in Model)
        {
            <div class="col-lg-4 col-md-6">
                <div class="card shadow-lg border-0">
                    <div class="card-body text-center">
                        <h3 class="card-title">@i.Name</h3>
                        <img class="object-fit-cover border rounded my-2" src="https://s.gravatar.com/avatar/@this.HashEmailForGravatar(i.Email)?d=mm&s=100" alt="User Avatar">
                        <h5>@i.Email</h5>
                        <p class="card-text">Ready to chat? Click the button below to start a real-time conversation with me!</p>
                        <a asp-controller="chat" asp-action="index" asp-route-receiverId="@i.Id" class="btn btn-primary w-100">
                            <i class="bi bi-chat-dots me-2"></i>Chat with me
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card img {
        object-fit: cover;
        height: 150px;
        border-bottom: 2px solid #007bff;
    }
</style>

@section Scripts {
    <script>
        console.log("User list loaded. Ready to start chatting!");
    </script>
}
 